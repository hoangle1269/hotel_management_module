<!-- revenue_report.xml -->
<odoo>
    <template id="report_hotel_revenue">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="hotel">
                <div class="page">
                    <h2>Revenue Report</h2>
                    <div class="row">
                        <div class="col-6">
                            <strong>Hotel:</strong>
                            <span t-field="hotel.name"/>
                        </div>
                        <div class="col-6">
                            <strong>Period:</strong>
                            <t t-esc="context_timestamp(datetime.now()).strftime('%Y-%m-%d')"/>
                        </div>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Room</th>
                                <th>Revenue</th>
                                <th>Occupancy Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="hotel.room_ids" t-as="room">
                                <td>
                                    <span t-field="room.name"/>
                                </td>
                                <td>
                                    <span t-field="room.revenue"/>
                                </td>
                                <td><span t-field="room.occupancy_rate"/>%
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>